= form_for @resume_section do |f|
  - if @resume_section.errors.any?
    #error_explanation
      %h2= "#{pluralize(@resume_section.errors.count, "error")} prohibited this resume_section from being saved:"
      %ul
        - @resume_section.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
